<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox
	xmlns:fx="http://javafx.com/fxml"
	alignment="TOP_LEFT"
	spacing="10"
	fx:controller="net.geoffrey.gui.AssistantAddController">
	
	<VBox
		alignment="TOP_LEFT"
		spacing="10"
		VBox.vgrow="ALWAYS">
		
		<padding>
			<Insets bottom="20" left="20" right="20" top="20"/>
		</padding>
		
		<Label
			text="%assistantNameLabelText">
		</Label>
		
		<TextField
			fx:id="assistantNameField"
			maxWidth="400">
		</TextField>
		
		<Label
			text="%wizardLabelText">
		</Label>
		
		<ComboBox
			fx:id="wizardCompoBox">
		</ComboBox>
		
		<ScrollPane
			fx:id="wizardContentPane"
			VBox.vgrow="ALWAYS">
		</ScrollPane>
		
		<HBox
			alignment="CENTER"
			spacing="10">
		
			<Button
				fx:id="performButton"
				onAction="#handlePerformAction"/>
				
			<Button
				text="%cancelActionText"
				onAction="#handleCancelAction"/>
			
		</HBox>
		
	</VBox>
	
</VBox>
